{
  "compilerOptions": {
    "baseUrl": ".",
    "types": [
      "vitest/globals",
      "node"
    ],
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "module": "ESNext",
    "skipLibCheck": true,
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "strict": true,
    "paths": {
      "@/*": [
        "src/lib/*"
      ],
      "@components": [
        "src/lib/components/index.ts"
      ],
      "@hooks": [
        "src/lib/hooks/index.ts"
      ],
      "@types": [
        "src/lib/types/index.ts"
      ],
      "@context": [
        "src/lib/context/index.ts"
      ],
      "@utils": [
        "src/lib/utils/index.ts"
      ],
    }
  },
  "include": [
    "demo/**/*",    
    "src/lib/**/*",
    "vitest.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "demo"
  ]
}
