{
  "scripts": {
    "build": "vite build && bun run build:type",
    "build:type": "tsc -p tsconfig.build.json",
    "changeset": "changeset",
    "dev": "vite",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "lint": "eslint src --fix",
    "prepare": "bun run build && bun run build:type",
    "prepublishOnly": "bun run build && bun run build:type",
    "release": "changeset publish",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "version": "changeset version"
  },
  "peerDependencies": {
    "react": "^19",
    "react-dom": "^19",
    "typescript": "^5.7.3"
  },
  "main": "dist/index.cjs",
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "react",
    "grid",
    "layout",
    "typescript",
    "baseline",
    "guide",
    "box",
    "layout",
    "typography",
    "spacing",
    "stack",
    "padding",
    "debug",
    "dev-tool",
    "pixel-perfect",
    "vertical-rhythm"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dnvt/baseline-kit.git"
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^22.13.5",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "@vitest/coverage-v8": "^2.1.9",
    "autoprefixer": "^10.4.20",
    "cssnano": "^7.0.6",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^4.6.2",
    "jsdom": "^25.0.1",
    "prettier": "^3.5.2",
    "rollup": "^4.34.8",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-visualizer": "^5.14.0",
    "vite": "^6.2.0",
    "vite-plugin-static-copy": "^2.2.0",
    "vitest": "^3.0.7"
  },
  "name": "baseline-kit",
  "version": "2.1.0",
  "type": "module",
  "homepage": "https://github.com/dnvt/baseline-kit#readme",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    },
    "./styles": {
      "import": "./dist/styles.css",
      "require": "./dist/styles.css",
      "default": "./dist/styles.css"
    },
    "./theme": {
      "import": "./dist/theme.css",
      "require": "./dist/theme.css",
      "default": "./dist/theme.css"
    },
    "./dist/styles.css": "./dist/styles.css",
    "./dist/theme.css": "./dist/theme.css",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "style": "dist/styles.css",
  "sideEffects": [
    "dist/styles.css",
    "dist/theme.css"
  ],
  "bugs": {
    "url": "https://github.com/dnvt/baseline-kit/issues"
  },
  "license": "MIT",
  "module": "dist/index.mjs",
  "publishConfig": {
    "access": "public"
  },
  "author": "Francois Denavaut",
  "description": "Baseline Kit is a lightweight development tool for visualizing and debugging grid systems and spacing in React applications. It provides configurable overlays for both column-based and baseline grids, flexible spacing components, and theme-aware configurationâ€”all optimized for performance and built with TypeScript.",
  "dependencies": {
    "esbuild": "^0.24.2",
    "postcss-preset-env": "^10.1.5"
  }
}
